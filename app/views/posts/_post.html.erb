 <div class="row">
  <div class='col-md-1 well text-center'>
    <% if logged_in? %>
      <%= link_to vote_post_path(post, vote: true), class: "btn btn-primary btn-block text-center", method: 'post' do %>
        Like
      <% end %>
      <%= link_to vote_post_path(post, vote: false), class: "btn btn-danger btn-block text-center", method: 'post' do %>
        Hate
      <% end %>
    <%end %>
    <br>
    <% if post.total_votes>=0 %>
      <%= post.total_votes %> Likes
    <% else %>
      <%= post.total_votes*-1 %> Hates
    <% end %>
  </div>
  <div class="well col-md-6">
    <p class = "text-right">
      <%= render partial: "categories/category", collection: post.categories %>
    </p>
    <p>
      <h4><%= post.title %></h4>
    
    <p>
      <%= post.content %>
    </p>
    <p class="text-right">
      <%= link_to "show this post", post_path(post) %>
    </p>
  </div>
</div>