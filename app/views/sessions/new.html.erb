<div class = 'container'>
	<%= render '/shared/title', title: 'User Log In'%>
	<hr>
	<div class="well">
		<%= form_tag '/login' do |f| %>
			<div class="form-group">
				<%= label_tag :name %>
				<br>
				<%= text_field_tag :name, params[:name] %>
			</div>
			<div class="form-group">
				<%= label_tag :password %>
				<br>
				<%= password_field_tag :password, params[:password] %>
			</div>
			<br>
			<%= submit_tag "Login", class: "btn btn-success" %>
			<% end %>
	</div> 
</div>